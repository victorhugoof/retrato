{
	"compilerOptions": {
		"module": "commonjs",
		"moduleResolution": "node",
		"pretty": true,
		"sourceMap": true,
		"target": "es6",
		"outDir": "./dist",
		"baseUrl": "./lib",
		"noImplicitReturns": true,
		"noUnusedParameters": true,
		"noImplicitUseStrict": true,
		"strictFunctionTypes": true
	},
	"include": [
		"lib/**/*.ts"
	],
	"exclude": [
		"node_modules"
	]
}
